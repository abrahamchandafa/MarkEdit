<Window x:Class="MarkEdit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Markdown Editor" Height="700" Width="1200"
        
        Icon="Assets/appicon.ico"
        WindowStyle="None" 
        AllowsTransparency="True"
        >


    <Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="40" />  
        <RowDefinition Height="*" /> 
    </Grid.RowDefinitions>

    <!-- Title Bar -->
    <Border Grid.Row="0" Background="#FF2D2D30" MouseDown="TitleBar_MouseDown">
        <DockPanel LastChildFill="False">
            <TextBlock Text="MarkMaster" Foreground="White" VerticalAlignment="Center" Margin="10,0" FontWeight="Bold" FontSize="14" />
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Content="—" Width="40" Click="Minimize_Click" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="16"/>
                <Button Content="❐" Width="40" Click="Maximize_Click" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="12"/>
                <Button Content="x" Width="40" Click="Close_Click" Background="Transparent" Foreground="White" BorderThickness="0" FontSize="16"/>
            </StackPanel>
        </DockPanel>
    </Border>

    <!-- Main content -->
    <Grid Grid.Row="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />     
            <ColumnDefinition Width="*" />  
        </Grid.ColumnDefinitions>

        <!-- Left: Markdown editor -->
        <TextBox Grid.Column="0" 
                 AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto" 
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 FontSize="14"
                 TextWrapping="Wrap" />

        <!-- Right: Live Preview -->
        <WebBrowser Grid.Column="1" />
    </Grid>
</Grid>

</Window>
