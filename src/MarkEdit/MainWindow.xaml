<Window x:Class="MarkEdit.MainWindow"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LaTeX Editor"
        Height="700"
        Width="1200"
        Icon="Assets/appicon.ico"
        WindowStyle="None"
        AllowsTransparency="True"
        xmlns:editors="http://icsharpcode.net/sharpdevelop/avalonedit">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0"
                Background="#FF2D2D30"
                MouseDown="TitleBar_MouseDown">
            <DockPanel LastChildFill="False">
                <TextBlock Text="LaTeX Editor"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="10,0"
                           FontWeight="Bold"
                           FontSize="14"/>
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Right">
                    <Button Content="—"
                            Width="40"
                            Click="Minimize_Click"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"/>
                    <Button Content="❐"
                            Width="40"
                            Click="Maximize_Click"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="12"/>
                    <Button Content="x"
                            Width="40"
                            Click="Close_Click"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="16"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Toolbar-->
        <Border Grid.Row="1"
                Background="#FF3B3B3B">
            <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="10,0">
                <Button Content="Recompile"
                        Click="Compile_Click"
                        Margin="5,0"
                        Padding="10,5"
                        Cursor="Hand"
                        Background="#FF007ACC"
                        Foreground="White"
                        BorderThickness="0"/>
                <Button Content="Download PDF"
                        Click="Download_Click"
                        Margin="5,0"
                        Cursor="Hand"
                        Padding="10,5"
                        Background="#FF007ACC"
                        Foreground="White"
                        BorderThickness="0"/>
            </StackPanel>
        </Border>

        <!-- Main content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="Column0"
                                  Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition x:Name="Column2"
                                  Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Markdown editor -->
            <editors:TextEditor Grid.Column="0"
                                x:Name="latexEditor"
                                ShowLineNumbers="True"
                                FontFamily="Consolas"
                                FontSize="14"
                                VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Auto"
                                WordWrap="true"/>

            <!-- Middle: Resizer -->
            <Grid Grid.Column="1"
                  Background="Transparent">
                <Thumb Width="10"
                       Background="#FF2D2D30"
                       DragDelta="Resizer_DragDelta"
                       HorizontalAlignment="Center"
                       Cursor="SizeWE"
                       VerticalAlignment="Stretch"/>
            </Grid>

            <!-- Right: Live Preview -->
            <wv2:WebView2 x:Name="pdfViewer" Grid.Column="2" />
        </Grid>
    </Grid>

</Window>
